{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}

    <div class="container">
        <h1>Cart</h1>
        <table class="table table-bordered">
            <tr>
                <th>Product name</th>
                <th>price</th>
                <th>quantity</th>
                <th>total price</th>
                <th>action</th>
            </tr>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.price * item.quantity }}</td>
                    <td>
                        <a href="{{ path('app_cart_product_remove',{'id':item.product.id}) }}" class="text-danger text-decoration-none">Delete to cart</a>
                    </td>
                </tr>
            {% else %}
                <p>your cart is empty</p>
            {% endfor %}
        </table>
        {% if total > 0 %}
            <br><br>
            <h2>Total: {{ total }} $</h2>
            <div class="row">
                <a data-turbo="false" href="{{ path('app_order') }}" class="btn btn-primary col-2 m-lg-1">Valider la commande </a>
                <a href="{{ path('app_cart_remove') }}" class="btn btn-outline-danger col-2 m-lg-1"> supprimer le panier</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
